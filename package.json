{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "serve:pc": "cross-env VUE_APP_PROJECT_NAME=pc vue-cli-service serve",
    "serve:mobile": "cross-env VUE_APP_PROJECT_NAME=mobile vue-cli-service serve",
    "build:pc": "cross-env VUE_APP_PROJECT_NAME=pc vue-cli-service build",
    "build:mobile": "cross-env VUE_APP_PROJECT_NAME=mobile vue-cli-service build",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@formily/core": "^2.2.0",
    "@formily/element-plus": "1.0.0-beta.5",
    "@formily/reactive": "^2.2.1",
    "@formily/reactive-vue": "^2.2.1",
    "@formily/vant": "^1.0.0-beta.14",
    "@formily/vue": "^2.2.0",
    "axios": "^0.27.2",
    "core-js": "^3.8.3",
    "element-plus": "2.2.14",
    "pinia": "^2.0.18",
    "postcss-px-to-viewport": "^1.1.1",
    "vant": "^3.5.4",
    "vue": "^3.2.13",
    "vue-router": "^4.0.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "babel-plugin-import": "^1.13.5",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "husky": "^7.0.1",
    "lerna": "^5.4.3",
    "lint-staged": "10.0.0",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "typescript": "~4.5.5"
  },
  "lint-staged": {
    "./packages/**/**/*.{js,jsx,ts,tsx,vue}": "eslint --ext .js,.jsx,.ts,.tsx,.vue src",
    "./packages/**/**/*.{js,jsx,tsx,ts,less,md,json,vue}": [
      "git add"
    ]
  }
}
